    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RouteNode[0].Arrival)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RouteNode[0].Departure)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.RouteNode[0].DistributionCenter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RouteNode[0].Package)
            </th>
            <th></th>
        </tr>
