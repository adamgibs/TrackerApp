        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistributionCenter.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Package.PackageNumID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RouteNodeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RouteNodeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RouteNodeID">Delete</a>
